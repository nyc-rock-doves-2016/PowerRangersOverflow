<div class="container">
  <div class="main-content">

    <h1><%=@question.title%></h1>
    <%=@question.content%>
    <div>
      <% if @question.comments %>
        <% @question.comments.each do |comment| %>
          <%= comment.content %>
        <% end %>
      <% end %>
      <a href="/questions/<%=@question.id%>/comments/new">Add a comment to post</a>
      <a href='/questions/<%=@question.id%>/edit'>Edit Post</a>
      <hr>
  </div>
  <div class="answer-container">
    <% if @question.answers %>
      <% @question.answers.each do |answer| %>
      <div class="answer">
        <a href="#">Upvote</a>
        <a href="#">Downvote</a><br>
        <%= answer.content %><br>
          <% if answer.comments %>
            <% answer.comments.each do |comment|%>
              <%= comment.content %>
            <% end %>
          <% end %>
        <a href="/answers/<%=answer.id%>/comments/new">Add a comment</a>
        <a href="/answers/<%=answer.id%>/edit">Edit this answer</a>
        <hr>
      </div>
      <% end %>
    <% end %>
    <%= erb :'/answers/_new_form.html' %>
  </div>
